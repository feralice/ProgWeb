<!-- Modal de edi√ß√£o-->
<div class="modal fade" id="modal-edit-curso" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar informa√ß√µes curso</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/curso/update/{{curso.id}}" method="post">
          <p>Edite os campos que voc√™ deseja</p>
          <div class="form-group">
            <label for="sigla" class="form-label mt-2">Sigla</label>
            <input type="text" name="sigla" class="form-control" value="{{curso.sigla}}">
          </div>
          <div class="form-group">
            <label for="nome" class="form-label mt-2">Nome</label>
            <input type="text" name="nome" class="form-control" value="{{curso.nome}}">
          </div>

          <fieldset class="form-group">
            <legend class="mt-4">√Årea de conhecimento</legend>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="areaId" id="areaId1" value="1">
              <label class="form-check-label" for="exatas">
                Exatas
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="areaId" id="areaId2" value="2">
              <label class="form-check-label" for "humanas">
                Humanas
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="areaId" id="areaId3" value="3" checked>
              <label class="form-check-label" for="biologicas">
                Biologicas
              </label>
            </div>
          </fieldset>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary mt-3" data-bs-dismiss="modal">Cancelar</button>
            <button id="my-button" class="btn btn-primary mt-3">Enviar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<a href="/curso">
    <button type="text" class="btn btn-outline-primary mt-3">Voltar</button>
</a>

